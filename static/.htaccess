<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase / # <--- ¡ESTO DEBE SER '/' PARA COINCIDIR CON baseUrl!

  # Si la solicitud es para un archivo existente, sírvelo directamente
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Si la solicitud es para un directorio existente, sírvelo directamente
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Para todas las demás solicitudes (URLs "limpias" de Docusaurus)
  # reescribe a index.html para que Docusaurus maneje el enrutamiento
  RewriteRule ^(.*)$ index.html [L]
</IfModule>